  <% if (typeof marqueeItems !== 'undefined' && Array.isArray(marqueeItems) && marqueeItems.length) { %>
  <div class="marquee" aria-label="Latest headlines ticker">
    <div class="container marquee__inner">
      <span class="marquee__dot" aria-hidden="true"></span>
      <div class="marquee__viewport" style="overflow:hidden; flex:1;">
        <div class="marquee__track">
          <% const repeated = marqueeItems.concat(marqueeItems); %>
          <% repeated.forEach(function(item){ %>
            <a class="marquee__item" href="<%= item.url %>" rel="noopener"> <%= item.title %> </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
  <% } %>
