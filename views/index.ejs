<%- include("partials/header") %>
<section class="section">
  <h2 class="page-title">AI News Generator</h2>
  <p class="subtitle">Generate synthetic headlines and snippets by category using Gemini.</p>
  <form action="/news" method="post">
    <select name="category" aria-label="Category">
      <option value="general">General</option>
      <option value="business">Business</option>
      <option value="sports">Sports</option>
      <option value="politics">Politics</option>
      <option value="technology">Technology</option>
      <option value="entertainment">Entertainment</option>
      <option value="science">Science</option>
      <option value="health">Health</option>
    </select>
    <input type="text" name="language" placeholder="Language (e.g. en, es)">
    <input type="text" name="locale" placeholder="Country code (optional)">
    <button type="submit" class="btn">Generate</button>
  </form>
</section>
<%- include("partials/footer") %>
